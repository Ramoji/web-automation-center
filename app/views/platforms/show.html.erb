<div class="panel panel-primary">
  <div class="panel-heading">Actions</div>
  <div class="panel-body">
		<%= render :partial => "/platform/show_platform" %>
    <% if (@platform.platform_type == "Atmos" || @platform.platform_type == "Avamar" || @platform.platform_type == "ViPR" || @platform.platform_type == "vCloud Director") && @platform.sys_admin.present? %>
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Requests <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Manual request', "/platform/manual_request/#{@platform.id}" %></li>
          <li><%= link_to 'Bulk requests', "/platform/bulk_requests/#{@platform.id}" %></li>
        </ul>
      </div>
    <% end %>
    <% if @platform.platform_type == "Atmos" && @platform.sys_admin.present? %>
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Reporting <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Logical view', "/platform/logical_view/#{@platform.id}" %></li>
          <li><%= link_to 'Physical view', "/platform/physical_view/#{@platform.id}" %></li>
        </ul>
      </div>
    <% end %>
	</div>
</div>
<%= link_to "Back", "/platforms", :class => "btn btn-default" %>
