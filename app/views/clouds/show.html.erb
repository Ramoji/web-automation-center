<div class="panel panel-primary">
  <div class="panel-heading">Actions</div>
  <div class="panel-body">
    <%= render :partial => "/cloud/show_cloud" %>
    <% if @cloud.api == "Atmos" || @cloud.api == "Amazon" || @cloud.api == "Swift" %>
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Requests <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Manual request', "/cloud/manual_request/#{@cloud.id}" %></li>
          <li><%= link_to 'Bulk requests', "/cloud/bulk_requests/#{@cloud.id}" %></li>
        </ul>
      </div>
		<% end %>
    <% if @cloud.api == "Amazon" %>
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Amazon features <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Multipart upload', "/cloud/multipart_upload/#{@cloud.id}" %></li>
          <li><%= link_to 'Client-side upload using multipart upload', "/cloud/client_side_multipart_upload/#{@cloud.id}" %></li>
        </ul>
      </div>
    <% end %>
	</div>
</div>
<%= link_to "Back", "/clouds", :class => "btn btn-default" %>
